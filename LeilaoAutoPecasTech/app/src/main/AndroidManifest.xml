<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.leilaoautopecastech">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MeusAnuncios"
            android:label="@string/title_activity_meus_anuncios"
            android:parentActivityName=".activity.Navigation_Drawer"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.leilaoautopecastech.activity.Navigation_Drawer" />
        </activity>
        <activity
            android:name=".activity.Navigation_Drawer"
            android:label="@string/title_activity_navigation__drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.CadastrarAnuncios" />
        <activity android:name=".activity.CadastroPJActivity" />
        <activity android:name=".activity.CadastroPF_Activity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".Slider.Slider">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:theme="@style/Theme.Intro" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>